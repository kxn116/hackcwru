<link href="/rsrc/chat.css" rel="stylesheet" type="text/css" />
<script src="/rsrc/chat.js"></script>
<div id="reportmodal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" style="font-size:20px; font-weight:800">
          Report
        </h5>
      </div>
      <div class="modal-body" style="padding:50px;">
        FOOD POISON
        <div id="progressBar"><div></div></div>
        <br />
        DISEASE 2
        <div id="progressBar2"><div></div></div>
        <br />
        Age under 5 with temperature 100~103F and vomitting symptoms<br />
        are most likely to have 'Food Poison' at 80% chance.<br /><br />
        <button
          style="background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;"
        >
          Check out which medicines work best on you!</button
        ><br /><br />
        <button
          style="background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;"
        >
          Find doctors who can help you!
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save Report</button>
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
          onclick="closeModal()"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
<div
  class="container"
  style="width:900px; height:500px;margin-top: 100px; border-radius: 5px;"
>
  <div class="col-xs-3">
    <span style="font-weight: 700; font-size:20px;">Patient Information</span
    ><br />
    <div id="patientinfo" style="display: none;">
      Name: Nick<br />
      Gender: Male<br />
      Age: 3<br />
    </div>
  </div>
  <div class="col-xs-9">
    <div class="row" style="margin-bottom: 10px;">
      <div class="doctor-profile">
        <div class="col-xs-3">
          <img
            style="width:100px; height:100px; border-radius: 50%;margin-left: 20px;"
            src="/rsrc/doctor.png"
          />
        </div>
        <div class="col-xs-9" style="margin-top:20px;">
          <span style="font-size: 26px; margin-top: 20px;">Dr. Johnson</span>
        </div>
      </div>
    </div>
    <div class="chat">
      <div class="chat-content"></div>
      <div class="row">
        <div class="col-xs-10">
          <div class="input-container">
            <div class="rec-container"></div>
          </div>
        </div>
        <div
          class="col-xs-2"
          style="margin-top: 10px; cursor: pointer;"
          id="submitButton"
        >
          <img style="width:50px; height:50px;" src="/rsrc/chat-arrow.png" />
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(() => {
    addBotMessage(0, 0);
  });
  $(document).on("click", "#profile1", e => {
    e.preventDefault();
    $("#profile1").css({ background: "rgb(100,100,200)", color: "white" });
  });
  // Input Submit Button
  $(document).on("click", "#submitButton", e => {
    enterInput();
  });
  $(document).on("click", ".rec-content-2", e => {
    $(e.target).css({ background: "rgb(100,100,240)", color: "white" });
  });
</script>
